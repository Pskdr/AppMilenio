<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/cvCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout

            android:layout_margin="6dp"
            android:paddingTop="6dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <LinearLayout

                android:layout_width="0dp"
                android:layout_weight="95"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textStyle="bold"
                        android:layout_width="0dp"
                        android:layout_weight="30"
                        android:layout_height="wrap_content"
                        android:text="Zona: "/>
                    <TextView
                        android:id="@+id/tvZona"
                        android:layout_width="0dp"
                        android:layout_weight="70"
                        android:layout_height="wrap_content"
                        android:text="ZONA DE PRUEBA"/>

                </LinearLayout>

                <LinearLayout

                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textStyle="bold"
                            android:layout_width="0dp"
                            android:layout_weight="40"
                            android:layout_height="wrap_content"
                            android:text="Producto "/>
                        <TextView
                            android:textStyle="bold"
                            android:layout_width="0dp"
                            android:layout_weight="30"
                            android:layout_height="wrap_content"
                            android:text="Ingrediente activo"/>

                        <TextView
                            android:textStyle="bold"
                            android:layout_width="0dp"
                            android:layout_weight="30"
                            android:layout_height="wrap_content"
                            android:text="DosificaciÃ³n"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout

                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvProducto"
                        android:layout_width="0dp"
                        android:layout_weight="40"
                        android:text="Producto prueba"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvIngrediente"
                        android:layout_width="0dp"
                        android:layout_weight="30"
                        android:layout_height="wrap_content"
                        android:text="Ingrediente activo prueba"/>

                    <TextView
                        android:id="@+id/tvDocificacion"
                        android:layout_width="0dp"
                        android:layout_weight="30"
                        android:layout_height="wrap_content"
                        android:text="Dosis prueba"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tvBorrar"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:textColor="@color/white"
                android:background="@drawable/et_style_button"
                android:layout_width="30dp"
                android:gravity="center"
                android:layout_height="40dp"
                android:text="X"/>


        </LinearLayout>



    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/xtv_espacio"
        android:layout_width="58dp"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cvCliente" />


</androidx.constraintlayout.widget.ConstraintLayout>